{
  "[docker]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[js]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.format.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "files.associations": {
    "*.gotmpl": "helm",
    "*.tmpl": "nginx",
    "*.tpl": "yaml",
    "*.yml": "yaml",
    ".secrets*": "shellscript",
    "CODE_OF_CONDUCT": "markdown",
    "CONTRIBUTING": "markdown",
    "_*.tpl": "helm",
    "aliases": "shellscript",
    "bin/hooks/*": "shellscript",
    "helmfile-*.yaml": "helm",
    "helmfile.yaml": "helm",
    "otomi": "shellscript"
  },
  "files.exclude": {
    "**/.history": true
  },
  "jest.jestCommandLine": "npm run test:ts --",
  "opa.roots": ["${workspaceFolder}/policies"],
  "prettier.enable": true,
  "shellcheck.exclude": ["2016", "2046", "2086", "2148"],
  "shellformat.flag": "-i 2 -ci",
  "sops.enabled": false,
  "yaml.schemas": {
    ".vscode/values-schema.yaml": "**/env/*.yaml",
    "https://json-schema.org/draft-07/schema": "values-schema.yaml"
  }
}
